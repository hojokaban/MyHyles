<h2><%= @hyle.name %></h2>
<div class="edit-hyle">
  <%= form_with(model: @hyle, url: users_hyle_path, local: true, class:"form-group") do |f| %>
    <%= render 'hyle_info_form', hyle: @hyle, f:f %>
    <%= f.submit '変更を保存する' %>
  <% end %>

  <div class="new-category">
    <h4>新しいカテゴリーを追加する</h4>
    <%= render 'categories/category_new_form', category: @category %>
  </div>
  <div class="new-tag">
    <h4>新しいタグを追加する</h4>
    <%= render 'categories/tag_new_form' %>
  </div>
</div>

<div class="edit-label">
  <h4>ラベルを編集する</h4>
  <%= render 'hyles/label_edit', hyle: @hyle %>
</div>

<div class="new-label">
  <h4>新しいラベルを追加する</h4>
  <%= render 'labels/label_new_form', label: @label, hyle: @hyle %>
</div>

<%= link_to "ヒュレーの編集を終える",users_hyle_path(@hyle) %>
