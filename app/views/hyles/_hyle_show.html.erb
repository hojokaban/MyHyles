<!-- recieves hyle -->

<div class="hyle-image">
  <%= attachment_image_tag hyle, :hyle_image, format:'jpg', class:"hyle-img", fallback:"no_image2.jpg", size:"300x300" %>
</div>
<div class="hyle-info">
  <table>
    <tr>
      <th>名前</th>
      <td><%= hyle.name %></td>
    </tr>
    <% if hyle.birthday_added %>
      <tr>
        <th>誕生日</th>
        <td><%= hyle.birthday %></td>
      </tr>
    <% end %>
    <tr>
      <th>カテゴリー</th>
      <td><%= hyle.category.name %></td>
    </tr>
    <% if hyle.tag_list.present? %>
      <tr>
        <th>タグ</th>
        <td>
          <% hyle.tag_list.each do |tag| %>
            <span><%= tag %></span>
          <% end %>
        </td>
      </tr>
    <% end %>
    <% hyle.labels.each do |label| %>
      <tr>
        <th><%= label.name %></th>
        <td><%= label.body %></td>
      </tr>
    <% end %>
  </table>
</div>
