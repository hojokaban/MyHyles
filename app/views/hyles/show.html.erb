<h2><%= @hyle.name %></h2>
<div class="hyle-image">
</div>
<div class="hyle-info">
  <table>
    <tr>
      <th>名前</th>
      <td><%= @hyle.name %></td>
    </tr>
    <% if @hyle.birthday_added %>
      <tr>
        <th>誕生日</th>
        <td><%= @hyle.birthday %></td>
      </tr>
    <% end %>
    <tr>
      <th>カテゴリー</th>
      <td><%= @hyle.category.name %></td>
    </tr>
    <% if @hyle.tag_list.present? %>
      <tr>
        <th>タグ</th>
        <td>
          <% @hyle.tag_list.each do |tag| %>
            <span><%= tag %></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= link_to "内容を編集する", edit_users_hyle_path(@hyle) %>
</div>
