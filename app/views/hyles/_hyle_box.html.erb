<!-- recieves hyle -->

<%= attachment_image_tag hyle, :hyle_image, format:'jpg', class:"hyle-img m-1", fallback:"no_image2.jpg", size:"80x80" %>
<div class="name-cate mx-2">
  <%= link_to users_hyle_path(hyle), id:"hyle-link-#{hyle.id}", style:"text-decoration:none;" do %>
    <h4><%= hyle.name %></h4>
  <% end %>
  <%= render 'categories/category_label', category:hyle.category %>
</div>
<div class="tags flex-wrap">
  <% hyle.tag_list.each do |tag| %>
    <%= render 'categories/tag_label', tag:tag %>
  <% end %>
</div>
