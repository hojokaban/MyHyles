<!-- recieves hyles today -->

<% hyles.each do |hyle| %>
  <div class="hyle-box col">
    <div class="col-5 col-md-3">
      <%= attachment_image_tag hyle, :hyle_image, format:'jpg', class:"img-80 m-1", fallback:"no_image2.jpg", size:"80x80" %>
    </div>
    <div class="col-md-4 name-cate">
      <%= link_to users_hyle_path(hyle), id:"hyle-link-#{hyle.id}" do %>
        <h4><%= hyle.name %></h4>
      <% end %>
      <%= render 'categories/category_label', category:hyle.category %>
    </div>
    <div class="col-md-5">
      <h5><%= hyle.birthday.nil? ? "--/--/--" : hyle.birthday.strftime("%Y年%-m月%-d日") %></h5>
      <h5>
        <% if !hyle.birthday.nil? %>
          <% if hyle.birthday_left == 0 %>
            今日が誕生日です！
          <% elsif hyle.birthday_left == 1 %>
            明日が誕生日です！
          <% else %>
            あと<%= hyle.birthday_left %>日！
          <% end %>
        <% end %>
      </h5>
    </div>
  </div>
<% end %>
