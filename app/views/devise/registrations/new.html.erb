<div class="wrapper">
  <div class="background">
    <h2>新規登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                                                        class:"form-group") do |f| %>
      <div class="row align-items-center flex-column margin-form">
        <%= render 'devise/shared/user_info', f:f %>
        <%= render 'devise/shared/password_form', f:f %>
      </div>
      <%= f.submit "新規登録", class:"btn btn-primary" %>
    <% end %>
  </div>
  <div class="devise-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
