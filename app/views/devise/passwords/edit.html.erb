<h2>パスワードの再設定</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class:"form-group") do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "新しいパスワード(6字以上)" %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "新しいパスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードを変更する" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
