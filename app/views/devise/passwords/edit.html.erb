<div class="wrapper">
  <div class="background">
    <h2>パスワードの再設定</h2>
    <%= form_for(resource, as: resource_name, url: user_password_path(resource_name),method: :put,
                                                        class:"form-group") do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <div class="row align-items-center flex-column margin-form">
        <%= render 'devise/shared/password_form', f:f %>
      </div>
      <%= f.submit "パスワードを変更する", class:"btn btn-primary" %>
    <% end %>
  </div>
  <div class="devise-links">
    <%= render "devise/shared/links" %>
  </div>

</div>
