<h2>パスワードの再設定</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name),
                        html: { method: :put }, class:"form-group") do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <%= render 'devise/shared/password_form', f:f %>

  <div class="actions">
    <%= f.submit "パスワードを変更する" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
