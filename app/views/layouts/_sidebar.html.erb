<div class="hyle-count my-4">
  <h4>ヒュレー <%= current_user.hyles.count %>人</h4>
</div>
<div class="category-index my-4">
  <h3>カテゴリー</h3>
  <% current_user.categories.each do |category| %>
    <%= link_to categorized_users_hyle_path(category) do %>
      <span><%= category.name %></span>
    <% end %>
  <% end %>
</div>
<div class="tag-index my-4">
  <h3>タグ</h3>
  <% current_user.tag_list.each do |tag| %>
    <%= link_to tagged_users_hyle_path(tag) do %>
      <span><%= tag %></span>
    <% end %>
  <% end %>
</div>
